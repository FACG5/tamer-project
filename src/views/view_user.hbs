<section class="main__header">
  <ul class="main__header--nav">
    <a data-toggle="tab" aria-expanded="false" href="/admin/users">
      <li onclick="viewUser(event,'user')" class="main__header--nav-tablink">
        الأعضاء
      </li>
    </a>
    <a data-toggle="tab" aria-expanded="false" href="/admin/users/borrower">
      <li onclick="viewUser(event,'borower')" class="main__header--nav-tablink">
      المستعيرين
      </li>
    </a>
  </ul>
</section>
<section class="main__content">
  <div id="user" class="main__conten--user" {{#if borrowedUser}} style="display: none" {{/if}}>
    <div class="main__conten--user-search">
      <input type="text" placeholder="بحث" name="search" id="input-search-user">
      <button type="submit">
        <img src="/img/search.png">
      </button>
    </div>
    <table class="main__content--table" id="table-user">
      <tr>
        <th>اسم العضو </th>
        <th>رقم الجوال</th>
        <th>العنوان</th>
        <th>حذف</th>
      </tr>
      {{#each res}}
        <tr id="{{idUser}}">
          <td>{{nameUser}}</td>
          <td>{{mobileNumber}}</td>
          <td>{{address}}</td>
          <td>
            <a id = "{{idUser}}" class="link link--delete delete" href="javascript:;"  >حذف</a>
          </td>
        </tr>
      {{/each}}
    </table>
  </div>
  <div id="borower" class="main__conten--user" {{#if viewUser}} style="display: none" {{/if}}>
    <div class="main__conten--user-search">
      <input type="text" placeholder="بحث" name="search" id="input-search-borower">
      <button type="submit">
        <img src="/img/search.png">
      </button>
    </div>
    <table class="main__content--table" id="table-borower">
      <tr>
        <th>اسم المستعير </th>
        <th>رقم الجوال</th>
        <th>العنوان</th>
        <th>اسم الكتاب</th>
        <th>تاريخ البداية</th>
        <th>تاريخ النهاية</th>
      </tr>
        {{#each res}}
          <tr id="{{idBorrow}}">
            <td>{{nameUser}}</td>
            <td>{{mobileNumber}}</td>
            <td>{{address}}</td>
            <td>{{namebook}}</td>
            <td>{{startDate}}</td>
            <td>{{endDate}}</td>
          </tr>
        {{/each}}
    </table>
  </div>
</section>
